@model LoginVM

<style>
    #error-custom-span span {
        color: #ff214f
    }

    .model-custom-errors li {
        font-size: 14px;
        color: #ff214f
    }
</style>

<!-- Contact section start -->
<div class="contact-section overview-bgi">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Form content box start -->
                <div class="form-content-box">
                    <!-- details -->
                    <div class="details">
                        <!-- Logo -->
                        <a href="/">
                            <img src="~/img/black-logo.png" class="cm-logo" alt="black-logo">
                        </a>
                        <!-- Name -->
                        <h3>Sign into your account</h3>
                        <!-- Form start -->
                        <form method="post" class="text-left">
                            <div asp-validation-summary="ModelOnly" class="model-custom-errors"></div>

                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" id="error-custom-span" style="color:#ff214f; font-size: 14px"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" id="error-custom-span" style="color:#ff214f; font-size: 14px"></span>
                            </div>
                            <input type="submit" class="btn btn-block btn-danger" value="Login" />

                        </form>
                        @section Scripts{
                            <partial name="_ValidationScriptsPartial" />
                        }
                    </div>
                    <!-- Footer -->
                    <div class="footer">
                        <span>Don't have an account? <a asp-action="Register">Register here</a></span>
                    </div>
                </div>
                <!-- Form content box end -->
            </div>
        </div>
    </div>
</div>
<!-- Contact section end -->