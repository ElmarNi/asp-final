@model CarDetailsVM
<!-- Sub banner start -->
<div class="sub-banner">
    <div class="container breadcrumb-area">
        <div class="breadcrumb-areas">
            <h1>Car Details</h1>
            <ul class="breadcrumbs">
                <li><a href="/">Home</a></li>
                <li class="active">Car Details</li>
            </ul>
        </div>
    </div>
</div>
<!-- Sub Banner end -->
<!-- Car details page start -->
<div class="car-details-page content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12 col-xs-12">
                <div id="carDetailsSlider" class="carousel car-details-sliders slide">
                    <!-- main slider carousel items -->
                    <!-- main slider carousel items -->
                    <div class="carousel-inner">
                        <div class="active item carousel-item" data-slide-number="0">
                            <img src="~/img/@Model.Advertisement.Car.Image" class="img-fluid" alt="slider-car">
                        </div>
                        @for (int i = 0; i < Model.Advertisement.Car.CarDetailPhotos.Count(); i++)
                        {
                            <div class="item carousel-item" data-slide-number="@(i+1)">
                                <img src="~/img/@Model.Advertisement.Car.CarDetailPhotos.ElementAt(i).Image" class="img-fluid" alt="slider-car">
                            </div>
                        }
                    </div>
                    <!-- main slider carousel nav controls -->
                    <ul class="carousel-indicators car-properties list-inline nav nav-justified">
                        <li class="list-inline-item active">
                            <a id="carousel-selector-0" class="selected" data-slide-to="0" data-target="#carDetailsSlider">
                                <img src="~/img/@Model.Advertisement.Car.Image" class="img-fluid" alt="small-car">
                            </a>
                        </li>
                        @for (int i = 0; i < Model.Advertisement.Car.CarDetailPhotos.Count(); i++)
                        {
                            <li class="list-inline-item">
                                <a id="carousel-selector-@(i+1)" data-slide-to="@(i+1)" data-target="#carDetailsSlider">
                                    <img src="~/img/@Model.Advertisement.Car.CarDetailPhotos.ElementAt(i).Image" class="img-fluid" alt="small-car">
                                </a>
                            </li>
                        }
                    </ul>
                    <div class="heading-car-2">
                        <h3>@Model.Advertisement.Car.Make.Brand.Name @Model.Advertisement.Car.Make.Name</h3>
                        <div class="price-location">
                            <span class="car-price">$@Model.Advertisement.Car.Price</span>
                            <span class="rent">For Sale</span>
                            <span class="location"><i class="flaticon-pin"></i>@Model.Advertisement.City.Country.Name, @Model.Advertisement.City.Name</span>

                            @if (Model.Advertisement.Car.IsVip)
                            {
                                <span class="rent">VIP</span>
                            }
                            <span class="car-price" style="position:absolute; right:15px">@Model.Advertisement.UpdatedDate.Day/@Model.Advertisement.UpdatedDate.Month/@Model.Advertisement.UpdatedDate.Year</span>
                        </div>
                    </div>

                </div>
                <div class="widget-2 advanced-search bg-grea-2 d-lg-none d-xl-none">
                    <h3 class="sidebar-title">Car Details</h3>
                    <partial name="_CarDetailsPartial" model="Model.Advertisement" />
                </div>
                <div class="tabbing tabbing-box p-4 mb-4" style="box-shadow: 0 0 35px rgba(0, 0, 0, 0.1)">
                    <div class="tab-content" id="carTabContent">
                        <div class="tab-pane fade active show p-0 m-0" id="one" role="tabpanel" aria-labelledby="one-tab">
                            <div class="car-description">
                                <h3 class="heading-2 mb-3">
                                    Description
                                </h3>
                                <p class="m-0" style="word-break:break-all">@Model.Advertisement.Car.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12">
                <div class="sidebar-right">
                    <!-- Advanced search start -->
                    <div class="widget advanced-search d-none d-xl-block d-lg-block">
                        <h3 class="sidebar-title">Car Details</h3>
                        <partial name="_CarDetailsPartial" model="Model.Advertisement" />
                    </div>
                    <!-- Recent posts start -->
                    <div class="widget recent-posts">
                        <h3 class="sidebar-title">Recent Posts</h3>
                        <partial name="_BlogPartial" model="Model.Blogs" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <h3 class="heading-2">Related Cars</h3>
            </div>
            <partial name="_CarsPartial" model="Model.RelatedAdvertisements" />
        </div>
    </div>
</div>
<!-- Properties details page end -->