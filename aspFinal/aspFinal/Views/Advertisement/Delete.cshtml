@model Advertisement

<!-- Sub banner start -->
    <div class="sub-banner">
        <div class="container breadcrumb-area">
            <div class="breadcrumb-areas">
                <h1>Advertisments</h1>
                <ul class="breadcrumbs">
                    <li><a href="/">Home</a></li>
                    <li class="active"><a href="/advertisement">Advertisement</a></li>
                    <li class="active">Delete</li>
                </ul>
            </div>
        </div>
    </div>
<!-- Sub Banner end -->
<!-- Car details page start -->
<div class="car-details-page content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12 col-xs-12">
                <div id="carDetailsSlider" class="carousel car-details-sliders slide">
                    <div class="carousel-inner">
                        <div class="active item carousel-item" data-slide-number="0">
                            <img src="~/img/@Model.Car.Image" class="img-fluid" alt="slider-car">
                        </div>
                        @for (int i = 0; i < Model.Car.CarDetailPhotos.Count(); i++)
                        {
                            <div class="item carousel-item" data-slide-number="@(i+1)">
                                <img src="~/img/@Model.Car.CarDetailPhotos.ElementAt(i).Image" class="img-fluid" alt="slider-car">
                            </div>
                        }
                    </div>
                    <!-- main slider carousel nav controls -->
                    <ul class="carousel-indicators car-properties list-inline nav nav-justified">
                        <li class="list-inline-item active">
                            <a id="carousel-selector-0" class="selected" data-slide-to="0" data-target="#carDetailsSlider">
                                <img src="~/img/@Model.Car.Image" class="img-fluid" alt="small-car">
                            </a>
                        </li>
                        @for (int i = 0; i < Model.Car.CarDetailPhotos.Count(); i++)
                        {
                            <li class="list-inline-item">
                                <a id="carousel-selector-@(i+1)" data-slide-to="@(i+1)" data-target="#carDetailsSlider">
                                    <img src="~/img/@Model.Car.CarDetailPhotos.ElementAt(i).Image" class="img-fluid" alt="small-car">
                                </a>
                            </li>
                        }
                    </ul>
                    <div class="heading-car-2">
                        <h3>@Model.Car.Make.Brand.Name @Model.Car.Make.Name</h3>
                        <div class="price-location">
                            <span class="car-price">$@Model.Car.Price</span>
                            <span class="rent">For Sale</span>
                            <span class="location"><i class="flaticon-pin"></i>@Model.City.Country.Name, @Model.City.Name</span>

                            @if (Model.Car.IsVip)
                            {
                                <span class="rent">VIP</span>
                            }
                            <span class="car-price" style="position:absolute; right:15px">@Model.UpdatedDate.Day/@Model.UpdatedDate.Month/@Model.UpdatedDate.Year</span>
                        </div>
                    </div>

                </div>
                <div class="widget-2 advanced-search bg-grea-2 d-lg-none d-xl-none">
                    <h3 class="sidebar-title">Car Details</h3>
                    <partial name="_CarDetailsPartial" model="Model" />
                </div>
                <div class="tabbing tabbing-box p-4 mb-4" style="box-shadow: 0 0 35px rgba(0, 0, 0, 0.1)">
                    <div class="tab-content" id="carTabContent">
                        <div class="tab-pane fade active show p-0 m-0" id="one" role="tabpanel" aria-labelledby="one-tab">
                            <div class="car-description">
                                <h3 class="heading-2 mb-3">
                                    Description
                                </h3>
                                <p class="m-0">@Model.Car.Description</p>
                            </div>
                            <form method="post" class="mt-3">
                                <div asp-validation-summary="All"></div>
                                <div class="alert alert-danger">
                                    <p class="m-0"><b>Are you sure to delete this blog?</b></p>
                                </div>
                                <input type="submit" class="btn btn-outline-danger btn-block mb-3" value="Delete" />
                            </form>
                            <a class="btn btn-block btn-outline-primary" asp-action="index">Back to advertisements</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12">
                <div class="sidebar-right">
                    <!-- Advanced search start -->
                    <div class="widget advanced-search d-none d-xl-block d-lg-block">
                        <h3 class="sidebar-title">Car Details</h3>
                        <partial name="_CarDetailsPartial" model="Model" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Properties details page end -->