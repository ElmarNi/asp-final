@model Blog
<style>
    label{
        display:block
    }
    input, textarea{
        width:100%;
        padding:10px;
    }
    input#Photo{
        padding:0
    }
</style>
<div class="page-wrapper">
    <!-- Container fluid  -->
    <div class="container-fluid">

        <!-- Bread crumb and right sidebar toggle -->
        <div class="row page-titles">
            <div class="col-12 text-center">
                <h3 class="text-themecolor">Hello dear @User.Identity.Name</h3>
                <ol class="breadcrumb d-flex justify-content-center">
                    <li class="breadcrumb-item"><a asp-controller="dashboard" asp-action="index">Admin</a></li>
                    <li class="breadcrumb-item"><a asp-controller="blog" asp-action="index">Blog</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </div>
        </div>
        <!-- End Bread crumb and right sidebar toggle -->

        <div class="row page-titles">
            <form method="post" enctype="multipart/form-data" class="w-100">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShortContent"></label>
                    <input asp-for="ShortContent" />
                    <span asp-validation-for="ShortContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content"></label>
                    <textarea asp-for="Content" style="height:150px;"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo"></label>
                    <input asp-for="Photo" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-block btn-outline-success" value="Create" />
            </form>
            @section Scripts{
                <partial name="_ValidationScriptsPartial" />
            }
            <a asp-action="index" class="btn btn-block btn-outline-info mt-3">Go back to blogs</a>
        </div>

    </div>
    <!-- End Container fluid  -->
    <!-- footer -->
    <footer class="footer">
        © 2019 Admin Wrap Admin by themedesigner.in
    </footer>
    <!-- End footer -->
</div>